doctype html
html(lang="en")
  head
    title= title
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(name="description" content='Page showing dynamic piecharts about support for leave/remain on the EU Referendum based on live incoming twitter data.')
    meta(name="author" content="John Isaacs & Sophie Haynes")
    script(src='/socket.io/socket.io.js')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js')
    script(src='/scripts/d3.v3.min.js')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', rel='stylesheet')
    script(type='text/javascript').
  body
  .container.text-center
    .row
      .col-md-5
        h1.
          Live Opinion Tracking
        h4.text-muted.
          Dynamic pie chart showing the live poll between #[span.in Remain] & #[span.out Leave].
        hr
        h3#padp.text-muted.
          Tweets tracked since #[span#time]
        #piepie
        h3.text-muted.
            In: #[span#inc ]  Out: #[span#outc ]
      .col-md-7
        hr.hidden-md.hidden-lg
        .row.panel-body
          h1.title.
            Most Recent #[span.in REMAIN] Tweet: 
          h3#staytweet.text-muted
        hr
        .row.panel-body
          h1.title.
            Most Recent #[span.out LEAVE] Tweet: 
          h3#leavetweet.text-muted
  
  .footer.text-center
    hr
    .container
      p.text-muted.
        Copyright &copy 2016 All Rights Reserved

include piestats.html
